{{>header}}
    {{>navbar}}
    
    <body>
        <!-- Header -->
        <header class="header header-inverse bg-fixed" style="background-image: url(img/bg-burguer-many.jpg)" data-overlay="8">
            <div class="container text-center">

                <div class="row">
                    <div class="col-12 col-lg-8 offset-lg-2">

                        <h1>{{food.name}}</h1>
                        <p class="fs-20 opacity-70">{{food.where}}, {{food.location}}</p>

                    </div>
                </div>
        
            </div>
        </header>
        <!-- END Header -->

        <main class="main-content">
            <section class="section bb-1">
                <div class="container">
                
                    <div class="row">
                        <div class="col-12 col-md-8">
                            {{>alerts}}
                            <div class="swiper-container">
                                <div class="swiper-wrapper">
                                    {{#food.imgLink}}
                                    <div class="swiper-slide text-center"><img src="{{.}}" alt="..."></div>
                                    {{/food.imgLink}}
                                </div>
                                <div class="swiper-pagination"></div>
                            </div>
                        </div>


                        <div class="col-12 col-md-4">
                            <br>
                            <h5>{{food.name}}</h5>

                            <p>
                                <span class="lead ml-20">${{food.price}}</span>
                            </p>
                            <hr>
                            {{#vertexSession.user.loggedIn}}
                                <form action="/add-to-cart-{{food.slug}}" method="POST" id="qtyForm" >
                                    <div class="row">
                                        <div class="col form-group">
                                            <input class="form-control" type="number" name="qty" placeholder="Quantity" required >
                                        </div>

                                        <div class="col form-group">
                                            <button id="qtySubmitBtn" class="btn btn-block btn-primary">Add to cart</button>
                                            <h1 id="loading"  >Submitting...</h1>
                                        </div>
                                    </div>
                                </form>
                            {{/vertexSession.user.loggedIn}}
                        </div>
                    </div>


                    <br>
                    <hr>
                    <br>


                    <div class="row">
                        <div class="col-12 col-lg-8 offset-lg-2">
                            <h5>Description</h5>
                            {{#description}}
                                <p>{{.}}</p>
                            {{/description}}
                        </div>
                    </div>
                </div>
            </section>
        </main>

        {{>footer}}
        {{>scripts}}

        <script type="text/javascript" >
            $(function(){
                $("#loading").hide()
                
                $("#qtyForm").on('submit', function(event){
                    $("#qtySubmitBtn").hide()
                    $("#loading").show()
                })
            })
        </script>

    </body>

</html>